# Server
PORT=3000
NODE_ENV=development

# Authentication
# IMPORTANT: Set a strong JWT_SECRET in production (use: openssl rand -base64 32)
JWT_SECRET=
JWT_ACCESS_TOKEN_EXPIRES_IN=7d
JWT_REFRESH_TOKEN_EXPIRES_IN=30d
MOCK_MODE=true

# Zhipu AI
ZHIPU_API_KEY=your_zhipu_api_key_here
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# LangGraph (Optional - for remote deployment)
LANGGRAPH_API_URL=
LANGGRAPH_ASSISTANT_ID=

# Database
DB_WRITE_ENABLED=false
DB_BATCH_SIZE=10
DB_FLUSH_INTERVAL=5000

# Supabase (Optional - when database is enabled)
# These credentials are also used for Supabase Storage file uploads
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Coze Knowledge Base (for AI agent tool enhancement)
COZE_API_KEY=
COZE_BASE_URL=https://api.coze.cn
COZE_WORKFLOW_ID=

# Tavily Web Search (for AI agent tool enhancement)
TAVILY_API_KEY=
SUPABASE_SERVICE_ROLE_KEY=...
